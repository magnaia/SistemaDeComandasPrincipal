            <Columns>
                <RadzenDataGridColumn TItem="SistemaBushidoSushiWok.Models.BUSHIDOSUSHIWOK.Sucursal" Property="SucId" Title="Suc Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SistemaBushidoSushiWok.Models.BUSHIDOSUSHIWOK.Sucursal" Property="SucNombre" Title="Suc Nombre">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SistemaBushidoSushiWok.Models.BUSHIDOSUSHIWOK.Sucursal" Property="SucPatente" Title="Suc Patente">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SistemaBushidoSushiWok.Models.BUSHIDOSUSHIWOK.Sucursal" Property="Ciudad.CiuNombre" Title="Ciudad">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SistemaBushidoSushiWok.Models.BUSHIDOSUSHIWOK.Sucursal" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="sucursal">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, sucursal)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
